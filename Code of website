    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // --- CORE FUNCTIONAL LOGIC (Identical to Original) ---
            
            // State Management Variables
            let sessionData = {
                users: {},
                chatMessages: []
            };
            let currentUser = ''; // 'Admin' or other username
            let currentUsername = ''; // 'admin' or other username
            let loggedInUsers = []; // For display purposes only

            // DOM Elements
            const loginPage = document.getElementById('login-page');
            const loginForm = document.getElementById('login-form');
            const usernameInput = document.getElementById('username');
            const passwordInput = document.getElementById('password');
            const loginError = document.getElementById('login-error');
            const mainContent = document.querySelector('main');
            const welcomeMessage = document.getElementById('welcome-message');
            const logoutButton = document.getElementById('logout-button');
            const adminPanel = document.getElementById('admin-panel');
            const userList = document.getElementById('user-list');
            const adminScanHistory = document.getElementById('adminScanHistory');
            const dataInput = document.getElementById('dataInput');
            const scanButton = document.getElementById('scanButton');
            const scanResults = document.getElementById('scanResults');
            const chatLog = document.getElementById('chatLog');
            const chatMessageInput = document.getElementById('chatMessage');
            const sendMessageButton = document.getElementById('sendMessage');
            
            // Chart instance holder
            let scanComparisonChart;

            // --- 1. Login Logic ---
            loginForm.addEventListener('submit', (e) => {
                e.preventDefault();
                const username = usernameInput.value.trim();
                const password = passwordInput.value;

                if (username === 'admin' && password === 'admin123') {
                    currentUser = 'Administrator'; // Changed display name
                    currentUsername = 'admin';
                    loginSuccess(currentUsername, password);
                } else if (username) {
                    currentUser = username;
                    currentUsername = username;
                    loginSuccess(currentUsername, 'N/A');
                } else {
                    loginError.textContent = '>> Authentication failure: Auditor ID required.';
                }
            });

            function loginSuccess(username, password) {
                if (!loggedInUsers.find(u => u.username === username)) {
                    loggedInUsers.push({ username });
                }
                if (!sessionData.users[username]) {
                    sessionData.users[username] = { 
                        scanHistory: [],
                        // Must generate a unique ID as per original function
                        userId: 'UID_' + Math.random().toString(36).substr(2, 9).toUpperCase(),
                        password: password
                    };
                }

                loginError.textContent = '';
                loginPage.classList.add('hidden');
                mainContent.classList.remove('hidden');
                welcomeMessage.innerHTML = `STATUS: <strong style="color: #34D399;">ONLINE</strong> | USER: <strong style="color: #E5E7EB;">${currentUser}</strong>`;
                
                if (currentUsername === 'admin') {
                    adminPanel.classList.remove('hidden');
                }

                initializeCharts();
                setupEventListeners();
                renderUserScanResults();
                renderChat();
                renderAdminPanel();
            }
            
            logoutButton.addEventListener('click', () => {
                const userIndex = loggedInUsers.findIndex(u => u.username === currentUsername);
                if (userIndex > -1) {
                    loggedInUsers.splice(userIndex, 1);
                }

                currentUser = '';
                currentUsername = '';
                mainContent.classList.add('hidden');
                adminPanel.classList.add('hidden');
                loginPage.classList.remove('hidden');
                usernameInput.value = '';
                passwordInput.value = '';
                renderAdminPanel();
            });

            // --- 2. Admin Panel Rendering (Updated to new styles) ---
            function renderAdminPanel() {
                // Render User List
                userList.innerHTML = loggedInUsers.map(user => {
                    const userData = sessionData.users[user.username];
                    if (!userData) return '';
                    return `<tr style="background-color: #1F2937;">
                                <td class="px-6 py-4 font-medium" style="color: #D1D5DB;">${user.username}</td>
                                <td class="px-6 py-4" style="color: #9CA3AF;">${userData.userId}</td>
                                <td class="px-6 py-4" style="color: #34D399;">${userData.password}</td>
                            </tr>`;
                }).join('') || '<tr><td colspan="3" class="text-center p-4" style="color: #6B7280;">NO ACTIVE SESSIONS.</td></tr>';

                // Render All Scan Histories (Accordion Style)
                let historyHtml = '';
                Object.keys(sessionData.users).forEach(username => {
                    const user = sessionData.users[username];
                    if (user.scanHistory.length > 0) {
                        historyHtml += `<div class="admin-history-item" style="border-bottom: 1px solid #374151;">
                            <div class="admin-history-header" onclick="this.parentElement.classList.toggle('open')">
                                <h4 style="font-weight: bold; color: #6366F1;">AUDITOR: ${username} (${user.scanHistory.length} LOGS)</h4>
                                <i class="fas fa-chevron-down chevron" style="color: #9CA3AF;"></i>
                            </div>
                            <div class="admin-history-content">
                                ${user.scanHistory.map((scan, index) => {
                                    let findingsHtml = scan.findings.length > 0 ? scan.findings.map(f => {
                                        const riskClass = f.risk === 'Critical' ? 'risk-critical' : 'risk-high';
                                        return `<li style="font-size: 0.8rem;"><span class="${riskClass}">[${f.risk}]</span> ${f.name} FOUND: <span class="code-snippet">${f.found}</span></li>`;
                                    }).join('') : '<li style="color: #34D399; font-size: 0.8rem;">CLEAN: No critical patterns detected.</li>';
                                    return `<div style="padding: 10px; border-bottom: 1px dashed #374151;">
                                        <p style="font-weight: bold; color: #9CA3AF; font-size: 0.75rem;">LOG #${index + 1} @ ${scan.timestamp.toLocaleTimeString()}</p>
                                        <ul style="list-style: none; padding-left: 0; margin-top: 5px; margin-bottom: 0; display: flex; flex-direction: column; gap: 4px;">${findingsHtml}</ul>
                                    </div>`;
                                }).join('')}
                            </div>
                        </div>`;
                    }
                });
                adminScanHistory.innerHTML = historyHtml || '<div class="text-center p-4" style="color: #6B7280;">NO AUDIT LOGS AVAILABLE.</div>';
                
                // Note: Click event handler moved to inline `onclick` for simplicity in single-file HTML.
            }
            
            function initializeCharts(){
                if (scanComparisonChart) scanComparisonChart.destroy();
                const sccCtx = document.getElementById('scanComparisonChart').getContext('2d');
                scanComparisonChart = new Chart(sccCtx, {
                    type: 'doughnut',
                    data: { 
                        labels: ['Critical', 'High'], 
                        datasets: [{ 
                            data: [0, 0], 
                            // New chart colors for dark theme
                            backgroundColor: ['#EF4444', '#FBBF24'], 
                            borderColor: '#1F2937', // Inner dark border
                            borderWidth: 4
                        }] 
                    },
                    options: { 
                        responsive: true, 
                        maintainAspectRatio: false, 
                        cutout: '70%', // Slightly larger hole
                        plugins: { 
                            legend: { 
                                position: 'bottom',
                                labels: {
                                    color: '#E5E7EB', // White legend text
                                    font: { family: 'Menlo' }
                                }
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        let label = context.label || '';
                                        if (label) {
                                            label += ': ';
                                        }
                                        if (context.parsed !== null) {
                                            const total = context.chart.data.datasets[0].data.reduce((a, b) => a + b, 0);
                                            const value = context.parsed;
                                            const percentage = total > 0 ? (value / total * 100).toFixed(1) : 0;
                                            label += percentage + '% (' + value + ')';
                                        }
                                        return label;
                                    }
                                }
                            }
                        }
                    }
                });
            }

            function setupEventListeners() {
                scanButton.addEventListener('click', handleScan);
                sendMessageButton.addEventListener('click', addChatMessage);
                chatMessageInput.addEventListener('keydown', e => { if (e.key === 'Enter') addChatMessage(); });
            }

            // --- 3. Leak Detection Patterns (COPIED EXACTLY) ---
            const leakPatterns = [
                { name: "API Key", regex: /sk-[a-zA-Z0-9]{30,}/g, risk: "Critical", category: "Credentials" },
                { name: "Email Address", regex: /\b[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Z|a-z]{2,}\b/g, risk: "High", category: "PII" },
                { name: "Credit Card Number", regex: /\b\d{4}[- ]?\d{4}[- ]?\d{4}[- ]?\d{4}\b/g, risk: "Critical", category: "PII" },
                { name: "Internal Memo Keyword", regex: /CONFIDENTIAL INTERNAL MEMO/ig, risk: "High", category: "Confidential" },
                { name: "SSN (US Social Security Number)", regex: /\b\d{3}-\d{2}-\d{4}\b/g, risk: "Critical", category: "PII" },
                { name: "Insecure Link / DB Link", regex: /https?:\/\/[^\s]*(\.sql|\.env|\.bak)|http:\/\/[^\s]+/g, risk: "High", category: "Confidential" }
            ];

            function handleScan() {
                const textToScan = dataInput.value;
                if (!textToScan.trim()) {
                    scanResults.innerHTML = '<p class="risk-high">>> ERROR: Input buffer is empty. Please provide data to scan.</p>';
                    return;
                }
                let findings = [];
                let riskCounts = { Critical: 0, High: 0 };
                
                // CORE LOGIC: Find matches and count risks
                leakPatterns.forEach(pattern => {
                    const matches = textToScan.matchAll(pattern.regex);
                    for (const match of matches) {
                        findings.push({ name: pattern.name, risk: pattern.risk, found: match[0] });
                        riskCounts[pattern.risk]++;
                    }
                });
                
                // Save to user's history
                sessionData.users[currentUsername].scanHistory.push({
                    timestamp: new Date(),
                    findings: findings,
                    source: 'Pasted Text'
                });

                renderUserScanResults();
                if(currentUsername === 'admin') renderAdminPanel();

                // Update Risk Percentage Chart
                scanComparisonChart.data.datasets[0].data = [riskCounts.Critical, riskCounts.High];
                scanComparisonChart.update();

                dataInput.value = ''; // Clear input after scan
            }
            
            // --- 4. Result and Chat Rendering (Updated to new styles) ---
            function renderUserScanResults() {
                const userHistory = sessionData.users[currentUsername].scanHistory;
                if (userHistory.length === 0) {
                    scanResults.innerHTML = '<p style="color: #9CA3AF;">Awaiting first risk scan...</p>';
                    return;
                }
                const latestScan = userHistory[userHistory.length - 1];
                if (latestScan.findings.length > 0) {
                    scanResults.innerHTML = latestScan.findings.map(f => {
                        const riskClass = f.risk === 'Critical' ? 'risk-critical' : 'risk-high';
                        return `<div style="margin-bottom: 8px;"><span class="${riskClass}">[${f.risk} ALERT]</span> ${f.name} detected: <span class="code-snippet">${f.found}</span></div>`;
                    }).join('');
                } else {
                    scanResults.innerHTML = '<p style="color: #34D399; font-weight: bold;">[CLEAN SCAN] No sensitive patterns detected in this buffer.</p>';
                }
            }

            function addChatMessage() {
                const message = chatMessageInput.value.trim();
                if (message === '') return;
                const timestamp = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
                // CORE LOGIC: Push to shared chatMessages array
                sessionData.chatMessages.push({ user: currentUser, message, timestamp });
                chatMessageInput.value = '';
                renderChat();
                if(currentUsername === 'admin') renderAdminPanel();
            }

            function renderChat() {
                if (sessionData.chatMessages.length === 0) {
                    chatLog.innerHTML = '<div class="text-center" style="color: #6B7280; margin-top: 10px;">SYSTEM: Chat initialized. Begin transmission.</div>';
                } else {
                    chatLog.innerHTML = sessionData.chatMessages.map(msg => {
                        return `<div class="chat-message"><p style="margin: 0; font-size: 0.875rem;"><strong class="chat-user">${msg.user}</strong> <span class="chat-timestamp">${msg.timestamp}</span></p><p style="margin: 0; color: #D1D5DB;">${msg.message}</p></div>`;
                    }).join('');
                }
                chatLog.scrollTop = chatLog.scrollHeight;
            }
            
            // Initial Chart Setup (for when the app loads without login)
            if (document.getElementById('scanComparisonChart')) {
                initializeCharts();
            }
        });
    </script>
</body>
</html>
